<section class="section">
    <div class="container mt-5" >
        
            <div class="d-flex justify-content-center ">
                <div class="card p-5" id="addCustomerCard">
                    <form action="/api/customers/add" method="post">
                        <div class="form-group">
                            <label for="customerName">Customer Name</label>
                            <input type="text" class="form-control btn-light" id="customerName" name="name" required placeholder="Contoso Ltd">
                        </div>
                        <div class="form-group">
                            <label for="customerEmail">Email address</label>
                            <input type="email" class="form-control btn-light" id="customerEmail" name="email" required placeholder="sales@contoso.com">
                        </div>
                        <div class="form-group">
                            <label for="customerAddress">Address</label>
                            <input type="text" class="form-control btn-light" id="customerAddress" name="address" required placeholder="123 Main Street, California 90001">
                        </div>
                        <div class="form-group">
                            <label for="customerPhone">Phone</label>
                            <input type="text" class="form-control btn-light" id="customerPhone" name="phone" required placeholder="+1-202-555-0139">
                        </div>
                        <div class="form-group">
                            <label for="customerDiscount">Discount %</label>
                            <input type="number" class="form-control btn-light" id="customerDiscount" name="discount" min="0" max="100" required placeholder="Discount percentage from 0 to 100">
                        </div>
                        {{#if error}}
                        <div class="alert alert-danger" role="alert">
                            <strong>Whoops!</strong> {{error}}
                        </div>
                        {{/if}}
                        
                        <button type="submit" class="btn btn-lg btn-primary mt-4">Add Customer</button>
                    </form>
                </div>
            
        </div>
</section>