<section class="section">
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <table id="customerTable" class="table table-curved text-centered">
                    <thead class="table-primary">
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Discount</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each customers}}
                        <tr>
                            <td>{{this.name}}</td>
                            <td>{{this.address}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.phone}}</td>
                            <td>{{this.discount}}%</td>
                            <td>
                                <button class="btn btn-primary" data-toggle="modal" data-target="#editCustomerModal"
                                    data-id="{{this.id}}" data-name="{{this.name}}" data-address="{{this.address}}"
                                    data-email="{{this.email}}" data-phone="{{this.phone}}" data-discount="{{this.discount}}">Edit</button>
                                <button class="btn btn-danger" data-toggle="modal" data-target="#deleteCustomerModal"
                                    data-id="{{this.id}}" data-name="{{this.name}}">Delete</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
</section>
<div class="modal fade" id="deleteCustomerModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                Delete Confirmation
            </div>
            <div class="modal-body">
                Delete customer <b><span id="customerName"></span></b> from the system? <br>  This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" id="modalDeleteButton" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="editCustomerModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                Edit Customer
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <input type="hidden" name="id" id="editId" value="">
                    <div class="form-group">
                            <label for="customerName">Customer Name</label>
                            <input type="text" class="form-control" id="customerName" name="name" required placeholder="Contoso Ltd">
                        </div>
                        <div class="form-group">
                            <label for="customerEmail">Email address</label>
                            <input type="email" class="form-control" id="customerEmail" name="email" required placeholder="sales@contoso.com">
                        </div>
                        <div class="form-group">
                            <label for="customerAddress">Address</label>
                            <input type="text" class="form-control" id="customerAddress" name="address" required placeholder="123 Main Street, California 90001">
                        </div>
                        <div class="form-group">
                            <label for="customerPhone">Phone</label>
                            <input type="text" class="form-control" id="customerPhone" name="phone" required placeholder="+1-202-555-0139">
                        </div>
                        <div class="form-group">
                            <label for="customerDiscount">Discount %</label>
                            <input type="number" class="form-control" id="customerDiscount" name="discount" min="0" max="100" required placeholder="Discount percentage from 0 to 100">
                        </div>

                </form>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" id="modalEditButton" class="btn btn-primary" onclick="editCustomer()">Edit</a>
            </div>
        </div>
    </div>
</div>