<section class="section">
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <table id="productTable" class="table table-curved text-center">
                    <thead class="table-primary">
                        <tr>
                            <th>SKU</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>
                            <td class="align-middle" >{{this.sku}}</td>
                            <td class="align-middle">{{this.name}}</td>
                            <td class="align-middle">{{this.price}} â‚¬</td>
                            <td class="align-middle w-25 p-0">
                                <button class="btn btn-primary" data-toggle="modal" data-target="#editProductModal"
                                    data-id="{{this.id}}" data-sku="{{this.sku}}" data-name="{{this.name}}" data-price="{{this.price}}">Edit</button>
                                <button class="btn btn-danger" data-toggle="modal" data-target="#deleteProductModal"
                                    data-id="{{this.id}}" data-name="{{this.name}}">Delete</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
<div class="modal fade" id="deleteProductModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                Delete Confirmation
            </div>
            <div class="modal-body">
               Delete product <b><span id="productName"></span></b> from the system? <br>  This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" id="modalDeleteButton" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="editProductModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                Edit Product
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <input type="hidden" name="id" id="editId" value="">
                    <div class="form-group">
                            <label for="productSKU">Product SKU</label>
                            <input type="text" class="form-control" id="productSKU" name="sku" readonly>
                        </div>
                    <div class="form-group">
                        <label for="productName">Product Name</label>
                        <input type="text" class="form-control" id="productName" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="productPrice">Product price</label>
                        <input type="number" class="form-control" id="productPrice" name="price" required>
                    </div>
                </form>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" id="modalEditButton" class="btn btn-primary" onclick="editProduct()">Edit</a>
            </div>
        </div>
    </div>
</div>