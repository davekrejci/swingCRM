<section class="section">
    <div class="container mt-5" >
        
            <div class="d-flex justify-content-center ">
                <div class="card p-5" id="addCustomerCard">
                    <form action="/products/add" method="post">
                        <div class="form-group">
                            <label for="customerName">Product SKU</label>
                            <input type="text" class="form-control btn-light" id="productSKU" name="sku" required placeholder="4E-3712">
                        </div>
                        <div class="form-group">
                            <label for="customerName">Product Name</label>
                            <input type="text" class="form-control btn-light" id="productName" name="name" required placeholder="Banana">
                        </div>
                        <div class="form-group">
                            <label for="customerEmail">Price</label>
                            <input type="number" step="0.01" min="0" class="form-control btn-light" id="productPrice" name="price" required placeholder="12">
                        </div>
                        {{#if error}}
                        <div class="alert alert-danger" role="alert">
                            <strong>Whoops!</strong> {{error}}
                        </div>
                        {{/if}}
                        
                        <button type="submit" class="btn btn-lg btn-primary mt-4">Add Product</button>
                    </form>
                </div>
            
        </div>
</section>